@page "/register"
@using AtriumPM.Web.Models
@using AtriumPM.Web.Services
@using AtriumPM.Web.Components.Layout
@layout AuthLayout
@inject AtriumApiClient ApiClient
@inject ApiSessionState Session
@inject NavigationManager NavigationManager

<PageTitle>Register Tenant - AtriumPM</PageTitle>

<div class="glass-card shadow-lg p-5">
    <div class="text-center mb-4">
        <h2 class="mb-1 d-flex align-items-center justify-content-center gap-2">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
            Register Tenant
        </h2>
        <p class="text-muted">Create a new property management workspace</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger mb-4 d-flex align-items-center gap-2">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="flex-shrink-0" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
            <div>@errorMessage</div>
        </div>
    }

    @if (registrationSuccess)
    {
        <div class="alert alert-success mt-4 p-4 text-center">
            <h4 class="mb-3">Registration Successful!</h4>
            <div class="mb-3 text-start">
                <strong>Your Tenant ID:</strong>
                <div class="font-monospace bg-dark bg-opacity-25 p-2 rounded mt-1 border border-success">@registeredTenantId</div>
                <small class="text-muted mt-1 d-block">Please save this ID, you will need it to log in.</small>
            </div>
            <button class="btn btn-success w-100" @onclick="ProceedToLogin">Proceed to Login</button>
        </div>
    }
    else
    {
        <EditForm Model="registerModel" OnValidSubmit="HandleRegister" FormName="registerForm">
            <DataAnnotationsValidator />

            <div class="row g-2 mb-3">
                <div class="col-6 form-floating">
                    <InputText id="companyName" @bind-Value="registerModel.Name" class="form-control" placeholder="Company Name" />
                    <label for="companyName">Company Name</label>
                </div>
                <div class="col-6 form-floating">
                    <InputText id="subdomain" @bind-Value="registerModel.SubDomain" class="form-control" placeholder="Subdomain" />
                    <label for="subdomain">Subdomain</label>
                </div>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-6 form-floating">
                    <InputText id="firstName" @bind-Value="registerModel.AdminFirstName" class="form-control" placeholder="First Name" />
                    <label for="firstName">First Name</label>
                </div>
                <div class="col-6 form-floating">
                    <InputText id="lastName" @bind-Value="registerModel.AdminLastName" class="form-control" placeholder="Last Name" />
                    <label for="lastName">Last Name</label>
                </div>
            </div>

            <div class="form-floating mb-3">
                <InputText type="email" id="email" @bind-Value="registerModel.AdminEmail" class="form-control" placeholder="name@example.com" />
                <label for="email">Admin Email</label>
            </div>

            <div class="form-floating mb-4">
                <InputText type="password" id="password" @bind-Value="registerModel.AdminPassword" class="form-control" placeholder="Password" />
                <label for="password">Admin Password</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-3 mb-3 fw-bold" disabled="@isBusy">
                @if (isBusy) { <span class="spinner-icon me-2">â†»</span> }
                Create Workspace
            </button>

            <div class="text-center">
                <span class="text-muted">Already have an account? </span>
                <a href="/login" class="text-primary text-decoration-none fw-semibold">Sign In</a>
            </div>
        </EditForm>
    }
</div>

@code {
    private RegisterTenantForm registerModel = new();
    private bool isBusy;
    private string errorMessage = string.Empty;
    private bool registrationSuccess;
    private string registeredTenantId = string.Empty;

    protected override void OnInitialized()
    {
        if (Session.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/");
        }
    }

    private async Task HandleRegister()
    {
        isBusy = true;
        errorMessage = string.Empty;

        try
        {
            var result = await ApiClient.RegisterTenantAsync(new RegisterTenantRequest(
                registerModel.Name,
                registerModel.SubDomain,
                registerModel.AdminEmail,
                registerModel.AdminPassword,
                registerModel.AdminFirstName,
                registerModel.AdminLastName));

            registeredTenantId = result.Id.ToString();
            registrationSuccess = true;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private void ProceedToLogin()
    {
        NavigationManager.NavigateTo($"/login?tenantId={registeredTenantId}");
    }

    private class RegisterTenantForm
    {
        public string Name { get; set; } = string.Empty;
        public string SubDomain { get; set; } = string.Empty;
        public string AdminEmail { get; set; } = string.Empty;
        public string AdminPassword { get; set; } = string.Empty;
        public string AdminFirstName { get; set; } = string.Empty;
        public string AdminLastName { get; set; } = string.Empty;
    }
}
