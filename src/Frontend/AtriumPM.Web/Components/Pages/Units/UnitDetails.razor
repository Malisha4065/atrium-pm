@page "/units/{Id:guid}"
@using AtriumPM.Web.Models
@using AtriumPM.Web.Services
@inject AtriumApiClient ApiClient
@inject NavigationManager NavigationManager

<PageTitle>Unit Details - AtriumPM</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center mb-4">
        <span class="spinner-icon fs-4 text-primary">↻</span>
    </div>
}
else if (unit == null || building == null)
{
    <div class="alert alert-danger shadow-sm">Unit not found.</div>
}
else
{
    <div class="d-flex align-items-center mb-4 gap-3">
        <a href="/properties/@building.Id" class="btn btn-outline-secondary p-2 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
        </a>
        <div>
            <h2 class="mb-1 text-white">Unit @unit.UnitNumber</h2>
            <p class="text-muted mb-0 d-flex align-items-center gap-2">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
               @building.Address
            </p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Lease Creation Form -->
        <div class="col-12 col-xl-4">
            <div class="glass-card h-100">
                <h5 class="mb-4 text-white d-flex align-items-center gap-2">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-primary" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                    New Lease Contract
                </h5>
                
                <div class="form-floating mb-3">
                    <input id="residentName" @bind="newLease.ResidentName" class="form-control" placeholder="Resident Name" disabled="@isBusy" />
                    <label for="residentName">Resident Name</label>
                </div>
                
                <div class="row g-2 mb-4">
                    <div class="col-6 form-floating">
                        <input id="startDate" type="datetime-local" @bind="newLease.StartDate" class="form-control" disabled="@isBusy" />
                        <label for="startDate">Start Date</label>
                    </div>
                    <div class="col-6 form-floating">
                        <input id="endDate" type="datetime-local" @bind="newLease.EndDate" class="form-control" disabled="@isBusy" />
                        <label for="endDate">End Date</label>
                    </div>
                </div>

                <button class="btn btn-primary w-100" @onclick="CreateLeaseAsync" disabled="@(isBusy || string.IsNullOrWhiteSpace(newLease.ResidentName))">
                    @if (isBusy) { <span class="spinner-icon me-2">↻</span> }
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    Sign Lease
                </button>
            </div>
        </div>

        <!-- Leases History -->
        <div class="col-12 col-xl-8">
            <div class="glass-card h-100">
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3" style="border-color: var(--card-border) !important;">
                    <h4 class="mb-0 text-white">Lease History</h4>
                </div>
                
                @if (unitLeases.Count == 0)
                {
                    <div class="text-center p-5 text-muted">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mb-3"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path></svg>
                        <h6>No active or past leases.</h6>
                        <p class="small">The unit is currently vacant. Use the panel on the left to sign a resident.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive rounded border" style="border-color: var(--card-border) !important;">
                        <table class="table table-hover text-white mb-0">
                            <thead style="background: rgba(0,0,0,0.2);">
                                <tr>
                                    <th class="border-0 px-4 py-3 text-secondary">Resident</th>
                                    <th class="border-0 px-4 py-3 text-secondary">Status</th>
                                    <th class="border-0 px-4 py-3 text-secondary">Start Date</th>
                                    <th class="border-0 px-4 py-3 text-secondary">End Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lease in unitLeases.OrderByDescending(l => l.StartDate))
                                {
                                    <tr style="background: rgba(255,255,255,0.02);">
                                        <td class="px-4 py-3 fw-semibold">@lease.ResidentName</td>
                                        <td class="px-4 py-3">
                                            <span class="badge @(lease.Status == "Active" ? "text-bg-success" : (lease.Status == "Pending" ? "text-bg-warning" : "text-bg-secondary"))">
                                                @lease.Status
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-muted">@lease.StartDate.ToString("MMM dd, yyyy")</td>
                                        <td class="px-4 py-3 text-muted">@(lease.EndDate?.ToString("MMM dd, yyyy") ?? "Ongoing")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private UnitDto? unit;
    private BuildingDto? building;
    private List<LeaseDto> unitLeases = new();
    
    private bool isLoading = true;
    private bool isBusy = false;
    
    private CreateLeaseForm newLease = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            isLoading = true;
            unit = await ApiClient.GetUnitByIdAsync(Id);
            if (unit != null)
            {
                building = await ApiClient.GetBuildingByIdAsync(unit.BuildingId);
                var allLeases = await ApiClient.GetLeasesAsync();
                unitLeases = allLeases.Where(l => l.UnitId == Id).ToList();
            }
        }
        catch (Exception)
        {
            NavigationManager.NavigateTo("/");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateLeaseAsync()
    {
        try
        {
            isBusy = true;
            await ApiClient.CreateLeaseAsync(new CreateLeaseRequest(
                Id, 
                newLease.StartDate, 
                newLease.EndDate, 
                newLease.ResidentName));
            
            newLease = new CreateLeaseForm(); // Reset form
            await LoadDataAsync();            // Refresh list
        }
        finally
        {
            isBusy = false;
        }
    }

    private class CreateLeaseForm
    {
        public string ResidentName { get; set; } = string.Empty;
        public DateTime StartDate { get; set; } = DateTime.Today;
        public DateTime EndDate { get; set; } = DateTime.Today.AddYears(1);
    }
}
